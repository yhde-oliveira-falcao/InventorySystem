<!doctype html>
<html>

<head>
  <title>New Inventory Item</title>
          <link rel="stylesheet" href="/css/styles.css" />

</head>

    {{> header user}}
    <div class="reportEditor">
    <h1>Inventory Editor</h1>
    <form  class="contactus" id="contactus" method="POST" action="/inventoryDelete/{{itemName}}">

        {{#if inventory.itemName}}
            <h4>Deleting inventory Name: {{inventory.itemName}}</h4><br><br>
        {{else}} <h3>No Item Found</h3> {{/if}}


        
        <label class="fixedlabel">Comments</label>
        <input type="text" name="delComments" placeholder="Your Comments" /><br><br>
                                                        
        &nbsp;&nbsp;<label class="fixedlabel"></label>
        <br><br><br><button id="loginButton" class="button1" type="submit" name="submit">Submit</button><br><br>
    </form>
</div>
    {{> footer user}}
</body>
</html>